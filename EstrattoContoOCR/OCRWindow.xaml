<Window x:Class="EstrattoContoOCR.OCRWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OCRWindow" Height="600" Width="797">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="789">
            <MenuItem Header="Operazioni OCR">
                <MenuItem Header="Esporta in Excel" Click="Export_Click"></MenuItem>
                <MenuItem Header="Pannello Editing" Click="Editing_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <ScrollViewer HorizontalAlignment="Left"  Margin="0,30,0,0" VerticalAlignment="Top"  HorizontalScrollBarVisibility="Auto" Grid.Row="1" Grid.Column="1">
            <Canvas Name="mImageCanvas" Height="453" Width="608"></Canvas>
        </ScrollViewer>


    </Grid>
</Window>
