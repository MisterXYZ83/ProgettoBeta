<Window x:Class="EstrattoContoOCR.PDFPageSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleziona Pagina PDF" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

  <Grid Margin="20">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
     </Grid.RowDefinitions> 
    
    <Label Height="30" Grid.Row="0" Grid.Column="0" >Pagina da analizzare:</Label>
    <ComboBox Grid.Row="0" Grid.Column="1" Name="cbPage" Height="30" SelectionChanged="Page_SelectionChanged">
    </ComboBox>

    <Button Height="20" Name="btConfirm" Grid.Row="1" Grid.ColumnSpan="2" Click="Confirm_Click">Seleziona</Button>
  </Grid>
</Window>
